<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.digidot.ishansupportsystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login"/>
        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CreateTicketActivity"
            android:label="@string/title_activity_create_ticket"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.UpdateTicketActivity"
            android:label="@string/title_activity_update_ticket"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activity.HomeActivity"/>
    </application>

</manifest>