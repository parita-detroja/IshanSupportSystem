<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <style name="text_regular_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_regular_text_size</item>
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="text_large_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_large_text_size</item>
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="text_regular_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_regular_text_size</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:starStyle">@drawable/edit_text_line_style</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="text_update_regular_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_regular_text_size</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:starStyle">@drawable/edit_text_line_style</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="text_large_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_large_text_size</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--Edit text style-->
    <style name="edittext_theme" parent="text_regular_black">
        <item name="android:background">@drawable/item_border</item>
        <item name="android:layout_marginTop">@dimen/view_margin</item>t
    </style>

    <style name="button_theme" parent="text_large_white">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:layout_marginTop">@dimen/view_margin</item>
        <item name="android:height">@dimen/dim_30dp</item>
    </style>

    <style name="MyCheckBoxStyle" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
