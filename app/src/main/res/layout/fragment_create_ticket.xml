<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_20dp">

        <Spinner
            android:paddingTop="@dimen/dim_5dp"
            android:paddingBottom="@dimen/dim_5dp"
            android:id="@+id/spinnerState"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dim_10dp"
            android:layout_marginBottom="@dimen/dim_10dp"
            style="@style/text_large_black"
            android:background="@drawable/shape"/>

        <Spinner
            android:paddingTop="@dimen/dim_5dp"
            android:paddingBottom="@dimen/dim_5dp"
            android:id="@+id/spinnerCity"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dim_10dp"
            android:layout_marginBottom="@dimen/dim_10dp"
            style="@style/text_large_black"
            android:layout_below="@+id/spinnerState"
            android:background="@drawable/shape"/>

        <Spinner
            android:paddingTop="@dimen/dim_5dp"
            android:paddingBottom="@dimen/dim_5dp"
            android:id="@+id/spinnerZone"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dim_10dp"
            android:layout_marginBottom="@dimen/dim_10dp"
            style="@style/text_large_black"
            android:layout_below="@+id/spinnerCity"
            android:background="@drawable/shape"/>

        <Spinner
            android:paddingTop="@dimen/dim_5dp"
            android:paddingBottom="@dimen/dim_5dp"
            android:id="@+id/spinnerClient"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dim_10dp"
            android:layout_marginBottom="@dimen/dim_10dp"
            style="@style/text_large_black"
            android:layout_below="@+id/spinnerZone"
            android:background="@drawable/shape"/>

        <Spinner
            android:paddingTop="@dimen/dim_5dp"
            android:paddingBottom="@dimen/dim_5dp"
            android:id="@+id/spinnerOffice"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dim_10dp"
            android:layout_marginBottom="@dimen/dim_10dp"
            style="@style/text_large_black"
            android:layout_below="@+id/spinnerClient"
            android:background="@drawable/shape"/>

        <Spinner
            android:paddingTop="@dimen/dim_5dp"
            android:paddingBottom="@dimen/dim_5dp"
            android:id="@+id/spinnerFault"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dim_10dp"
            android:layout_marginBottom="@dimen/dim_10dp"
            style="@style/text_large_black"
            android:layout_below="@+id/spinnerOffice"
            android:background="@drawable/shape"/>

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_100dp"
            android:layout_below="@+id/spinnerFault"
            android:layout_marginBottom="@dimen/dim_10dp"
            android:layout_marginTop="@dimen/dim_10dp"
            android:background="@drawable/shape"
            android:hint="@string/hint_enter_description"
            android:inputType="text|textMultiLine"
            android:lines="4"
            android:padding="@dimen/dim_5dp"
            android:paddingBottom="@dimen/dim_5dp"
            android:paddingTop="@dimen/dim_5dp"
            android:textColor="@color/colorBlack" />

        <Button
            android:id="@+id/btnCreateTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="@dimen/dim_5dp"
            android:paddingBottom="@dimen/dim_5dp"
            android:text="@string/txt_create_ticket"
            android:layout_below="@+id/etDescription"
            style="@style/button_theme"/>

    </RelativeLayout>

</ScrollView>
